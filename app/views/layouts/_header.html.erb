<div id="user_nav">
  <% if pair_users? %>
    <%= link_to('Home', root_url) %>  |  
    <%= link_to "Log out #{current_user.username}", session_path(current_user), :method => :delete %> |
    <%= link_to "Log out #{current_user_2.username}", session_path(current_user_2), :method => :delete %> |
    <%= link_to "Challenges", challenges_path %> |
    <%= link_to "Create Challenge", new_challenge_path %>

  <% elsif active_user %>
    <%= link_to('Home', root_url) %>  |  
    <%= link_to "Log out #{active_user.username}", session_path(active_user), :method => :delete %> |
    <%= link_to "Challenges", challenges_path %> |
    <%= link_to "Create Challenge", new_challenge_path %>
    <%= link_to "Login another", new_session_path %>
  <% else %>
    <%= link_to "Sign up", new_user_path %> or
    <%= link_to "Log in", new_session_path %>
  <% end %>
</div>


<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
