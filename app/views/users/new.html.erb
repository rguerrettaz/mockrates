<div class="container">
  <%= form_for @user do |f| %>
  <%= f.error_messages %>
  <%= f.label :username %>:
  <%= f.text_field :username %>
  <%= f.label :email %>:
  <%= f.email_field :email  %>
  <%= f.label :password %>:
  <%= f.password_field :password  %>

  <%= f.label :admin %>
  <%= f.check_box :admin %> <br/>
  <%= f.submit "Sign Up!" %>
  <% end %>
</div>
